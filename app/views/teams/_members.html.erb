<ul class="list-unstyled">
  <% members.each do |member| %>
    <li class="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(member, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= member.name %>
        </div>
        <div>
          <p><%= link_to 'View profile', user_path(member) %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>