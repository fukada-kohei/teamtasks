<ul class="list-unstyled">
  <% teams.each do |team| %>
    <li class="mb-3">
      <div class="row">
        <div>
          <% if current_user.joined_team?(team) %>
            <%= team.id %>：<%= link_to team.team_name, team_path(team) %>
          <% else %>
            <%= team.id %>：<%= team.team_name %>
          <% end %>
        </div>
        <div class="ml-3">
          <%= render 'relationships/join_botton', team: team %>
        </div>
      </div>
    </li>

  <% end %>
  
  <%= paginate teams %>
</ul>