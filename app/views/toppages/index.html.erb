<% if logged_in? %>
  <p>ログイン完了ユーザ：<%= current_user.name %></p>
  <div class="row">
    <aside class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= current_user.name %></h3>
        </div>
        <div class="card-body">
          <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
        </div>
      </div>
    </aside>
    <div class="col-sm-8 pl-5">
      <ul class="list-unstyled">
        <% @teams.each do |team| %>
        <% team.tasks.each do |task| %>
          <li class="mb-3">
            <div>
              <span class="mr-5"><%= task.team.team_name %></span><span>Due date：<%= task.due_date %></span>
            </div>
            <div>
              <%= link_to task.title, task_path(task) %> <span class="text-muted">updated at <%= task.updated_at %></span>
            </div>
            <div>
              <p><%= task.progress %></p>
            </div>
          </li>
        <% end %>
        <% end %>
      </ul> 
    </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Teamtasks</h1>
      <%= link_to 'sign up now!', signup_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
<% end %>